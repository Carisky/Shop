@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    Home
    <p>@ViewBag.SmartPhrase</p>

    <div class="text-center">
        <h1 class="display-4">Days of the Week</h1>
        <ul>
            @foreach (var day in ViewData["DaysOfWeek"] as string[])
            {
                <li>@day</li>
            }
        </ul>

        <h1 class="display-4">Months</h1>
        <ul>
            @foreach (var month in ViewData["Months"] as string[])
            {
                <li>@month</li>
            }
        </ul>
    </div>
</body>
